@article{ WOS:001492776500001,
Author = {Fu, Y. and Bromley, D. and Setlur, V.},
Title = {D<sc>ata</sc>W<sc>eaver</sc>: Authoring Data-Driven Narratives through
   the Integrated Composition of Visualization and Text},
