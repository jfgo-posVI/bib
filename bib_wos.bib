Author = {Dhanoa, Vaishali and Hinterreiter, Andreas and Fediuk, Vanessa and
   Elmqvist, Niklas and Groeller, Eduard and Streit, Marc},
Title = {D-Tour: Semi-Automatic Generation of Interactive Guided Tours for
   Visualization Dashboard Onboarding},
