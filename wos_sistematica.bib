@article{ WOS:000728786500001,
Author = {Briones Rojas, Maria de los Angeles},
Title = {Disclose to Tell: a Data Design Framework for Alternative Narratives},
Journal = {COMPUTER SUPPORTED COOPERATIVE WORK-THE JOURNAL OF COLLABORATIVE
